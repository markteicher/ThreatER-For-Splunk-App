<form version="1.1">
  <label>Plugins</label>

  <search>
    <query>
      index=security_threater sourcetype=threater:plugin
      | spath
      | eval
          name_lc=lower(name),
          type_lc=lower(type),
          enabled_lc=lower(tostring(enabled)),
          healthy_lc=lower(tostring(isHealthy))
    </query>
  </search>

  <fieldset submitButton="false">
    <input type="text" token="name_filter">
      <label>Plugin Name</label>
    </input>

    <input type="dropdown" token="type_filter">
      <label>Plugin Type</label>
      <choice value="*">All</choice>
      <choice value="ip">IP</choice>
      <choice value="domain">Domain</choice>
      <choice value="csv">CSV</choice>
      <choice value="stix">STIX/TAXII</choice>
      <default>*</default>
    </input>

    <input type="dropdown" token="enabled_filter">
      <label>Enabled</label>
      <choice value="*">All</choice>
      <choice value="true">Enabled</choice>
      <choice value="false">Disabled</choice>
      <default>*</default>
    </input>

    <input type="dropdown" token="healthy_filter">
      <label>Health</label>
      <choice value="*">All</choice>
      <choice value="true">Healthy</choice>
      <choice value="false">Unhealthy</choice>
      <default>*</default>
    </input>
  </fieldset>

  <row>
    <panel>
      <table>
        <title>Configured Plugins</title>
        <search>
          <query>
            index=security_threater sourcetype=threater:plugin
            | spath
            | eval
                name_lc=lower(name),
                type_lc=lower(type),
                enabled_lc=lower(tostring(enabled)),
                healthy_lc=lower(tostring(isHealthy))
            | search
                name_lc="*$name_filter$*"
                type_lc="$type_filter$"
                enabled_lc="$enabled_filter$"
                healthy_lc="$healthy_filter$"
            | table
                name
                type
                enabled
                isHealthy
                interval
                lastSyncDatetime
                lastUpdateDatetime
                pluginUuid
          </query>
        </search>
        <option name="count">25</option>
        <option name="wrap">false</option>
      </table>
    </panel>
  </row>

  <row>
    <panel>
      <chart>
        <title>Plugins by Type</title>
        <search>
          <query>
            index=security_threater sourcetype=threater:plugin
            | spath
            | stats count by type
          </query>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>

    <panel>
      <chart>
        <title>Plugin Health</title>
        <search>
          <query>
            index=security_threater sourcetype=threater:plugin
            | spath
            | stats count by isHealthy
          </query>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>
  </row>

</form>
