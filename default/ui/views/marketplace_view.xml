<dashboard version="1.1">
  <label>Marketplace</label>

  <description>
    Available ThreatER services and subscriptions.
  </description>

  <row>
    <panel>
      <title>Available Services</title>

      <table>
        <search>
          <query>
index=security_threater sourcetype=threater:marketplace
| table name tagLine isSubscribed canSubscribe
| sort name
          </query>
        </search>

        <option name="drilldown">row</option>
        <drilldown>
          <link>
            /app/ThreatER_for_Splunk/marketplace_view_details?service=$row.name$
          </link>
        </drilldown>
      </table>
    </panel>
  </row>

  <row>
    <panel>
      <title>Service Categories</title>

      <html>
        <div style="display:flex;gap:30px;flex-wrap:wrap;">
          <div>
            <h3><span class="icon-shield"></span> Threat Intelligence</h3>
            <p>Curated intelligence feeds and IOC sources.</p>
          </div>

          <div>
            <h3><span class="icon-search"></span> Threat Hunting</h3>
            <p>Proactive investigation services.</p>
          </div>

          <div>
            <h3><span class="icon-database"></span> Log Management</h3>
            <p>Advanced data handling and analysis.</p>
          </div>

          <div>
            <h3><span class="icon-headset"></span> Platinum Support</h3>
            <p>24x7 premium operational support.</p>
          </div>
        </div>
      </html>
    </panel>
  </row>

</dashboard>
